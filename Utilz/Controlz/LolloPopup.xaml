<uctl:BackOrientOpenObservControl
    x:Class="Utilz.Controlz.LolloPopup"
    x:Name="me"
    xmlns:uctl="using:Utilz.Controlz"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    UseLayoutRounding="True"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Canvas x:Name="CanvasRoot">
        <Popup x:Name="MyPopup" IsOpen="False"
            Canvas.ZIndex="999"
            Closed="OnMyPopup_Closed"
            IsLightDismissEnabled="False">
        </Popup>
        <Canvas x:Name="FullScreenCanvas" Visibility="Collapsed" Canvas.ZIndex="1" Background="Red" Opacity=".3"
                Tapped="OnFullScreenCanvas_Tapped"
                GotFocus="OnFullScreenCanvas_GotFocus"
                PointerReleased="OnFullScreenCanvas_PointerReleased"
                PointerCaptureLost="OnFullScreenCanvas_PointerCaptureLost"/>
    </Canvas>
</uctl:BackOrientOpenObservControl>
